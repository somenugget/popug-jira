<%= link_to 'Create Task', new_task_path, { class: 'button is-primary' } %>

<div class="mt-5 block">
  <table class="table w-100">
    <thead>
    <tr>
      <th>Public id</th>
      <th>Assignee</th>
      <th>Status</th>
      <th>Title</th>
      <th>Description</th>
      <th></th>
      <th></th>
    </tr>
    </thead>

    <tbody>
    <%- @tasks.each do |task| %>
      <%= render(partial: 'tasks/table_row', locals: { task: task }) %>
    <% end %>
    </tbody>
  </table>
</div>
